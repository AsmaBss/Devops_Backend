pipeline {
    agent any

    stages {
        stage('Git Cloning') {
            steps {
                git branch:'Asma',
                url: 'https://github.com/hazemAm28/TpAchat.git'
            }
        }
        stage('Clean Project') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('Compile Project') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test Project') {
            steps {
                sh 'mvn test'   
            }
        }
        stage('SonarQube') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login-admin -Dsonar.password-sonar'   
            }
        }
    }
}
