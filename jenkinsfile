pipeline {
    agent any

    stages {
        stage('Git Cloning') {
            steps {
                echo 'Getting project from Git';
                git branch: 'Asma',
                url: 'https://github.com/hazemAm28/TpAchat.git'
            }
        }
        stage('Clean Project') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('Compile Project') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test Project') {
            steps {
                //sh 'cd /var/lib/jenkins/workspace/TpAchat'
                sh 'mvn test'   
            }
        }
        stage('Sonarqube') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login-admin -Dsonar.password-sonar'
            }
        }
        stage('Nexus'){
            steps{
                sh 'mvn deploy -DskipStaging=true'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn clean package'  
            }
        }
    }    
}
